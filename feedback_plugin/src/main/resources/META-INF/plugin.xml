<idea-plugin>
    <id>np1815.feedback</id>
    <name>Feedback Driven Development</name>
    <version>0.0.1</version>
    <vendor email="dummy" url="dummy">dummy</vendor>

    <description>
        <![CDATA[
        Feedback driven development!<br>
        A front-end plugin for displaying feedback in the IDE.
        ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>

    <project-components>
        <component>
            <implementation-class>np1815.feedback.plugin.components.FeedbackDrivenDevelopment</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="np1815.feedback.plugin.services.MetricsBackendService"/>
        <projectConfigurable id="FeedbackDrivenDevelopment" displayName="Feedback Driven Development"
                             instance="np1815.feedback.plugin.components.ProjectConfiguration" />
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Feedback" description="Feedback menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="np1815.feedback.plugin.actions.DisplayFeedbackAction" text="Display feedback" description="Displays feedback"/>
        </group>
    </actions>
</idea-plugin>